<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhenglz.mapper.BookMapper">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <select id="queryById" resultType="com.zhenglz.entity.Book" parameterType="long">
        <!-- 具体的sql -->
        Select
        book_id,
        name ,
        number
        FROM
        book
        WHERE
        book_id = #{bookId}
    </select>

    <select id="queryAll" resultType="com.zhenglz.entity.Book">
        SELECT
            book_id,
            name,
            number
        FROM
            book
        ORDER BY
            book_id
    </select>

    <select id="queryAllByPage" resultType="com.zhenglz.entity.Book">
        SELECT
            book_id,
            name,
            number
        FROM
            book
        ORDER BY
            book_id
    </select>
</mapper>